# WebIAScrap v0.0.0 - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=WebIAScrap
FLASK_ENV=production
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DB_PASSWORD=changeme123
DATABASE_URL=postgresql://webiauser:changeme123@db:5432/webiascrap

# Security (generate secure random keys!)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here

# NewsAPI Configuration
# Get your free API key at: https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key-here

# Scraping Configuration
NEWS_SOURCES=techcrunch,wired,the-verge
MAX_NEWS_COUNT=30
SCRAPE_INTERVAL_HOURS=24

# News Query Keywords
NEWS_KEYWORDS=artificial intelligence,AI,machine learning,data science,neural networks,deep learning

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/webiascrap.log
