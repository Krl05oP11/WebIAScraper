# SocialPublisher Environment Variables
# Copy this file to .env.social_publisher and fill in your credentials

# WebIAScraper API
WEBIASCRAPER_API_URL=http://app:8000
WEBIASCRAPER_API_KEY=

# Plataformas habilitadas (separadas por comas)
# Opciones: linkedin,twitter,bluesky,telegram
ENABLED_PLATFORMS=linkedin,twitter,bluesky,telegram

# Configuración de polling
POLL_INTERVAL_SECONDS=300  # 5 minutos
MAX_NEWS_PER_CYCLE=5

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60
RETRY_BACKOFF_MULTIPLIER=2.0

# ============================================================================
# LINKEDIN CREDENTIALS
# ============================================================================
# Obtener en: https://www.linkedin.com/developers/
# Guía: https://learn.microsoft.com/en-us/linkedin/shared/authentication/authentication

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_PERSON_URN=  # Ejemplo: urn:li:person:ABC123XYZ

# ============================================================================
# TWITTER/X CREDENTIALS
# ============================================================================
# Obtener en: https://developer.x.com/
# Necesitas crear una app y generar tokens

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# ============================================================================
# BLUESKY CREDENTIALS
# ============================================================================
# 1. Crear cuenta en https://bsky.app/
# 2. Settings > App Passwords > Generate New App Password

BLUESKY_HANDLE=  # Ejemplo: usuario.bsky.social
BLUESKY_APP_PASSWORD=  # App password generado (NO tu contraseña normal)

# ============================================================================
# TELEGRAM CREDENTIALS
# ============================================================================
# 1. Hablar con @BotFather en Telegram
# 2. Crear bot con /newbot
# 3. Crear canal público o privado
# 4. Añadir el bot como administrador del canal

TELEGRAM_BOT_TOKEN=  # Ejemplo: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHANNEL_ID=  # Ejemplo: @mi_canal o -100123456789

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/social_publisher.log
